@INPROCEEDINGS{Cuadros2007,
  author = {Ana M. Cuadros and Fernando V. Paulovich and Rosane Minghim and Guilherme P. Telles},
  title = {Point Placement by Phylogenetic Trees and its Application to Visual Analysis of Document Collections},
